# ===================================================================
# KhetSetu Backend Environment Configuration Template
# ===================================================================
# Copy this file to '.env' and fill in your actual values
# Never commit the actual .env file to version control

# ===================================================================
# APPLICATION SETTINGS
# ===================================================================
NODE_ENV=development
PORT=5000

# ===================================================================
# DATABASE CONFIGURATION
# ===================================================================
# MongoDB Atlas connection string for development
MONGODB_URI="mongodb+srv://username:password@cluster.mongodb.net/khetsetu?retryWrites=true&w=majority&appName=khetsetu"

# MongoDB Atlas connection string for production
MONGODB_URI_PROD="mongodb+srv://username:password@cluster.mongodb.net/khetsetu-prod?retryWrites=true&w=majority&appName=khetsetu"

# Database Connection Pool Settings
DB_MAX_POOL_SIZE=10
DB_SERVER_SELECTION_TIMEOUT_MS=5000
DB_SOCKET_TIMEOUT_MS=45000

# ===================================================================
# JWT & AUTHENTICATION
# ===================================================================
# Generate secure random strings for production (minimum 32 characters)
JWT_SECRET=your_super_secure_jwt_secret_key_change_in_production_32chars
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_change_in_production_32chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Management
SESSION_SECRET=your_super_secure_session_secret_change_in_production

# Security Settings
BCRYPT_SALT_ROUNDS=12

# ===================================================================
# EXTERNAL API KEYS
# ===================================================================
# Google Gemini AI API Key (get from Google AI Studio)
GEMINI_API_KEY=your_gemini_api_key_here

# Weather API Key (get from WeatherAPI.com)
WEATHER_API_KEY=your_weather_api_key_here

# Optional: Valid API Keys for external access (comma-separated)
VALID_API_KEYS=api_key_1,api_key_2

# ===================================================================
# RATE LIMITING
# ===================================================================
# Rate limit window in milliseconds (900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ===================================================================
# LOGGING CONFIGURATION
# ===================================================================
LOG_LEVEL=info
LOG_FILE=backend.log
MAX_FILE_SIZE=5242880

# ===================================================================
# CORS & SECURITY
# ===================================================================
# Frontend URL for CORS (adjust for your frontend port)
CORS_ORIGIN=http://localhost:5173

# ===================================================================
# FILE UPLOAD
# ===================================================================
UPLOAD_PATH=uploads/
