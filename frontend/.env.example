# ===================================================================
# KhetSetu Frontend Environment Configuration Template
# ===================================================================
# Copy this file to '.env' and fill in your actual values
# These variables must be prefixed with VITE_ to be accessible in the browser

# ===================================================================
# API CONFIGURATION
# ===================================================================
# Backend API base URL
VITE_API_URL=http://localhost:5000/api
VITE_BACKEND_URL=http://localhost:5000/api

# ===================================================================
# EXTERNAL API KEYS
# ===================================================================
# Google Gemini AI API Key (for client-side AI features)
# WARNING: This will be visible in the browser - use backend proxy for production
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Weather API Key (for client-side weather features)
# WARNING: This will be visible in the browser - use backend proxy for production
VITE_WEATHER_API_KEY=your_weather_api_key_here

# ===================================================================
# APPLICATION SETTINGS
# ===================================================================
# Application environment
VITE_NODE_ENV=development

# Enable/disable development features
VITE_DEBUG_MODE=true

# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# ===================================================================
# FEATURE FLAGS
# ===================================================================
# Enable/disable specific features
VITE_ENABLE_AI_CHAT=true
VITE_ENABLE_WEATHER=true
VITE_ENABLE_PEST_DETECTION=true
VITE_ENABLE_MARKET_LINKAGE=true

# ===================================================================
# UI CONFIGURATION
# ===================================================================
# Application title
VITE_APP_TITLE=KhetSetu - Smart Agricultural Platform

# Default language
VITE_DEFAULT_LANGUAGE=en

# Theme configuration
VITE_DEFAULT_THEME=light
